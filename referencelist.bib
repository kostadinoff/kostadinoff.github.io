  journal      = {Healthcare},
  author       = {Stefanov, Rumen and Raycheva, Ralitsa and Kostadinov, Kostadin and Stefanov, Georgi and Zdravkova-Aneva, Iva and Dzhambazova, Elizabet and Iskrov, Georgi},
