  journal      = {Rare Diseases and Orphan Drugs},
  author       = {Kostadinov, Kostadin and Stefanov, Georgi and Iskrov, Georgi and Stefanov, Rumen},
  year         = {2020},
  month        = {10},
  pages        = {36–44}
}

